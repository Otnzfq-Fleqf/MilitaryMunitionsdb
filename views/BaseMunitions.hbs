<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Base Munitions</title>
    <link rel='stylesheet' type='text/css' media='screen' href='/css/main.css'>
    <script src='/js/app.js'></script>
</head>
<body>
    <header>
        <h1>Base Munitions</h1>
    </header>
    <nav class="global" aria-label="Main navigation">
        <a href="/">Home Page</a>
        <a href="/MilitaryBranches">Military Branches</a>
        <a href="/Bases">Bases</a>
        <a href="/Munitions">Munitions</a>
        <a href="/Personnel">Personnel</a>
        <a href="/MunitionsOrders">Munitions Orders</a>
        <a href="/MunitionTransactions">Munition Transactions</a>
        <a href="/BaseMunitions">Base Munitions</a>
        <a href="/PersonnelMunitions">Personnel Munitions</a>
    </nav>    
    <main>
        <section>
            <h2>Browse Base Munitions</h2>
            <table>
                <thead>
                    <tr>
                        {{#each data.[0]}}
                        <th>{{@key}}</th>
                        {{/each}}
                    </tr>
                </thead>
                <tbody>
                    {{#each data}}
                    <tr>
                        <td>{{this.baseId}}</td>
                        <td>{{this.munitionId}}</td>
                        <td>{{this.quantity}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </section>
        <section>
            <h2>Add Base Munition</h2>
            <form id="addBaseMunitionForm" action="/add-base-munition" method="post">
                <input type="number" id="baseId" name="baseId" placeholder="Base ID" required>
                <input type="number" id="munitionId" name="munitionId" placeholder="Munition ID" required>
                <input type="number" id="quantity" name="quantity" placeholder="Quantity" required>
                <input type="submit" value="Add Base Munition">
            </form>
        </section>
        <section>
            <h2>Update Base Munition</h2>
            <form id="updateBaseMunitionForm" action="/update-base-munition" method="post">
                <input type="hidden" id="updateBaseId" name="baseId">
                <input type="hidden" id="updateMunitionId" name="munitionId">
                <input type="number" id="updateQuantity" name="quantity" placeholder="Quantity" required>
                <input type="submit" value="Update Base Munition">
            </form>
        </section>
        <section>
            <h2>Delete Base Munition</h2>
            <form id="deleteBaseMunitionForm" action="/delete-base-munition" method="post">
                <input type="hidden" id="deleteBaseId" name="baseId">
                <input type="hidden" id="deleteMunitionId" name="munitionId">
                <label for="deleteBaseMunitionDetails">Are you sure you want to delete this base munition?</label>
                <div id="deleteBaseMunitionDetails">
                </div>
                <input type="submit" value="Delete Base Munition">
            </form>
        </section>
    </main>
    <footer>
        <p>&copy; 2024 Military Munitions Database</p>
    </footer>
</body>
</html>
